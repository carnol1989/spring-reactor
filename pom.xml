<!-- 			<id>jcenter-snapshots</id> -->
<!-- 			<name>jcenter</name> -->
<!-- 			<url>http://oss.jfrog.org/artifactory/oss-snapshot-local/</url> -->
<!-- 		</repository> -->
<!-- 	</repositories>	 -->

	<build>
		<plugins>
			<plugin>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-maven-plugin</artifactId>
			</plugin>
		</plugins>
	</build>

</project>
